{
  "name": "valve",
  "description": "minimal pull stream",
  "version": "3.1.3",
  "homepage": "https://github.com/escapace/valve",
  "repository": {
    "type": "git",
    "url": "git://github.com/escapace/valve.git"
  },
  "types": "./types/index.d.ts",
  "main": "lib/cjs/index.js",
  "module": "lib/es/index.js",
  "sideEffects": false,
  "files": [
    "lib",
    "types"
  ],
  "scripts": {
    "build:dts": "rm -rf lib types && tsc && rm -rf lib",
    "build:cjs": "cross-env NODE_ROLLUP_TARGET=cjs rollup -c -o lib/cjs/index.js",
    "build:es": "cross-env NODE_ROLLUP_TARGET=es rollup -c -o lib/es/index.js",
    "build": "npm run build:dts && npm run build:cjs && npm run build:es",
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "test:karma": "karma start --single-run",
    "test": "npm run test:node && npm run test:karma",
    "test:travis": "npm run test:node && npm run test:karma",
    "test:node": "cross-env TS_NODE_COMPILER_OPTIONS='{ \"declaration\": false, \"module\": \"CommonJS\" }' mocha --require ts-node/register **/*.spec.ts *.spec.ts",
    "test:coverage": "cross-env TS_NODE_COMPILER_OPTIONS='{ \"declaration\": false, \"module\": \"CommonJS\" }' nyc mocha --require ts-node/register --require source-map-support/register --full-trace --bail **/*.spec.ts *.spec.ts",
    "test:codecov": "npm run test:coverage && nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "devDependencies": {
    "@types/chai": "^4.1.0",
    "@types/lodash": "^4.14.92",
    "@types/mocha": "^2.2.46",
    "@types/node": "^9.3.0",
    "@types/sinon": "^4.1.3",
    "chai": "^4.1.2",
    "codecov": "^3.0.0",
    "cross-env": "^5.1.3",
    "fastbench": "^1.0.1",
    "immediate": "^3.2.3",
    "karma": "^2.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-sauce-launcher": "^1.2.0",
    "karma-typescript": "^3.0.9",
    "mocha": "5.0.0",
    "nyc": "^11.4.1",
    "puppeteer": "^1.0.0",
    "rollup": "^0.54.0",
    "rollup-plugin-typescript": "^0.8.1",
    "sinon": "^4.1.5",
    "source-map-support": "^0.5.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-config-escapace": "^1.0.0",
    "tslint-config-prettier": "^1.6.0",
    "tslint-config-standard": "^7.0.0",
    "tslint-microsoft-contrib": "^5.0.2",
    "typescript": "^2.6.2"
  },
  "author": "escapace <opensource@escapace.com>",
  "license": "MPL-2.0",
  "dependencies": {
    "lodash": "^4.17.4"
  },
  "nyc": {
    "include": [
      "**/*.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.spec.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
