{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "declaration": true,
    "declarationDir": "types",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "external_types/*"
      ]
    },
    "lib": [
      "dom",
      "es2015",
      "es2015.promise",
      "es2016",
      "es2017",
      "es5",
      "es6",
      "es7",
      "esnext",
      "scripthost"
    ]
  },
  "exclude": [
    "benchmarks",
    "node_modules",
    "scripts",
    "vendor",
    "*/*.spec.ts",
    "*.spec.ts"
  ]
}
