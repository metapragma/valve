{
  "compilerOptions": {
    "allowJs": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "outDir": "lib",
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "typeRoots" : ["node_modules/@types"],
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es5",
      "es6",
      "es7",
      "esnext",
      "es2015.promise",
      "scripthost"
    ]
  },
  "exclude": [
    "node_modules",
    "test",
    "drafts",
    "benchmarks"
  ]
}
