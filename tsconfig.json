{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "declaration": true,
    "declarationDir": "lib/types",
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "outDir": "lib",
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "baseUrl": "external_types",
    "typeRoots" : ["external_types", "node_modules/@types"],
    "lib": [
      "dom",
      "es2015",
      "es2015.promise",
      "es2016",
      "es2017",
      "es5",
      "es6",
      "es7",
      "esnext",
      "scripthost"
    ]
  },
  "exclude": [
    "*.spec.ts",
    "**/*.spec.ts",
    "benchmarks",
    "node_modules",
    "scripts",
    "test",
    "vendor"
  ]
}
