#!/usr/bin/env bash
#
# vim: set ft=sh:
#
# @description tslint

main ()
{
    verbose true
    strict true

    local files

    while read -d '' -r file
    do
        files+=("${file}")
    done < <(find . -type f \
        -not -path './node_modules/*' \
        -not -path './lib/*' \
        -not -name '*.spec.ts' \
        -not -name '*.d.ts' \
        -name '*.ts' \
        -print0 2> /dev/null)

    ./node_modules/tslint/bin/tslint --project './tsconfig.json' --config './tslint.json' "${files[@]}"
}
